<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.UploadActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/recordingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="@string/baseTimer"
        android:layout_margin="10dp"
        android:textColor="@color/main"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40sp"
        android:id="@+id/capture"
        android:src="@drawable/baseline_fiber_manual_record_24"
        android:scaleType="centerCrop"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <ImageButton
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10sp"
        android:src="@drawable/baseline_flash_on_24"
        app:tint="@color/main"
        android:id="@+id/toggleFlash"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <ImageButton
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_below="@id/toggleFlash"
        android:layout_marginEnd="10sp"
        android:layout_alignParentEnd="true"
        android:id="@+id/flipCamera"
        android:src="@drawable/baseline_flip_camera_android_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/main" />

    <ImageButton
        android:layout_width="40sp"
        android:layout_height="60sp"
        android:layout_below="@id/flipCamera"
        android:layout_marginEnd="10sp"
        android:layout_alignParentEnd="true"
        android:id="@+id/clearVideosButton"
        android:src="@drawable/bin"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/main" />

    <ImageButton
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/videoStorage"
        android:src="@drawable/baseline_video_library_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/main" />

</RelativeLayout>